{
  "name": "application",
  "version": "1.0.0",
  "description": "Electron based dev journal app",
  "main": "main.js",
  "scripts": {
    "lint": "eslint . --ignore-pattern \"web/scripts/ajax/*\"",
    "prod": "NODE_ENV=production electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:windows": "set NODE_ENV=development & electron .",
    "generate-docs": "jsdoc web -r -d ../docs",
    "test": "jest --testPathPattern=./tests/unit/",
    "test:e2e": "npx playwright test tests/e2e/",
    "clean": "rm -rf dist output",
    "prebuild": "mkdir dist output",
    "package-osx": "npm run clean && npm run prebuild && npx electron-packager . --platform=darwin --arch=x64 --out=./dist --overwrite --icon=instone-rock.icns --app-bundle-id=team3.instone --app-version=1.0.0 --electron-version=14.0.0 --ignore=node_modules",
    "package-win": "npm run clean && npm run prebuild && npx electron-packager . --platform=win32 --arch=x64 --out=./dist --overwrite --icon=instone-rock.icns --app-bundle-id=team3.instone --app-version=1.0.0 --electron-version=14.0.0 --ignore=node_modules"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "Team 3",
  "license": "ISC",
  "dependencies": {
    "@codemirror/autocomplete": "^6.0.0",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/lint": "^6.0.0",
    "@codemirror/search": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@electron/packager": "^18.3.2",
    "electron": "^30.0.3",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "@codemirror/buildhelper": "^1.0.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.2.0",
    "@playwright/test": "^1.44.1",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3"
  }
}
